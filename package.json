{
  "name": "@mitchbne/linting",
  "description": "My personal lint configurations",
  "repository": "https://github.com/mitchbne/linting",
  "private": true,
  "license": "UNLICENSED",
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">= 15.0.0"
  },
  "scripts": {
    "postinstall": "husky install",
    "lint": "eslint --ext=.js --quiet packages",
    "build": "yarn workspaces run build",
    "deploy": "yarn workspaces run deploy",
    "release": "yarn workspaces run release"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "eslint": "^7.30.0",
    "husky": ">=6",
    "jest": "^27.0.6",
    "lint-staged": ">=10",
    "next": "^11.0.1",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "semantic-release": "^17.4.4",
    "semantic-release-monorepo": "^7.0.5",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.{js,md,json,yml}": "prettier --write",
    "*.{js}": "lint --fix --cache"
  }
}

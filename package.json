{
  "name": "@mitchbne/linting",
  "description": "My personal lint configurations",
  "repository": "https://github.com/mitchbne/linting",
  "private": true,
  "license": "UNLICENSED",
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">= 15.0.0"
  },
  "scripts": {
    "postinstall": "husky install",
    "lint": "eslint --ext=.js --quiet packages",
    "bump": "npx lerna version",
    "release": "npx lerna publish --yes from-package"
  },
  "devDependencies": {
    "eslint": "^7.30.0",
    "husky": ">=6",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "lint-staged": ">=10",
    "next": "^11.0.1",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.{js,md,json,yml}": "prettier --write",
    "*.{js}": "lint --fix --cache"
  }
}
